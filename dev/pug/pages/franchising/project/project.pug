.franchising-project
  .container
    .franchising-project__content
      h2.franchising-project__title.font-h2 Наши реализованные проекты
      .franchising-project__wrapper.swiper
        ul.franchising-project__list.swiper-wrapper
          li.franchising-project__item.swiper-slide
            .franchising-project__image
              picture.franchising-project__picture
                source(media="(min-width: 1440px)" srcset="static/images/content/index/parks-1-large.jpg")
                img.franchising-project__image(src="static/images/content/index/parks-1-mobile.jpg" width="320" height="300" alt="Фото парка ТРК Континент")
            h3.franchising-project__heading.font-h4 ТРК Континент
            span.franchising-project__city Санкт-Петербург
        +slider-button("left").franchising-project__slider-left
        +slider-button("right").franchising-project__slider-right
        .hero__bullets.franchising-project__bullets

