section.birthday-animators
	.container
		.birthday-animators__content
			+icon("icon-purple-mask", "birthday-animators__mask--purple", "137", "54")
			+icon("icon-yellow-mask", "birthday-animators__mask--yellow", "76", "30")
			.birthday-animators__top
				h2.birthday-animators__title.font-h3 Аниматоры мальчики
				.birthday-animators__download
					+button-download-link("#", "Скачать PDF", true).birthday-animators__download-link
